extends layout

block content
    div(class="d-flex flex-column p-2 justify-content-center align-items-center mt-5")
        form(action="/log-in" method="POST" )
            h1=title
            p Don't have an account? 
                a(href="/sign-up") Sign up
            div
                label(for="username" class="form-label") Username:
                input(name="username" type="text" required="true" maxLength="20" class="form-control")
                if (error)
                    p #{error}
            div
                label(for="password" class="form-label") Password:
                input(name="password" type="password" required="true" class="form-control")
                if (error)
                    p #{error}
            br
            button(type="submit" class="btn btn-primary") Log in