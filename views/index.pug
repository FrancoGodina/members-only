extends layout

block content
    h1= title
    p Welcome to #{title}
    if messages
        div
            each message in messages
                div
                    if (user && user.member)
                        h2= message.title
                        p= message.text
                        p Posted by: #{message.username.username}
                        p #{message.timestamp}
                    else if (user)
                        h2= message.title
                        p= message.text
                        p Become a member to see message's author and date.
                    else
                        h2= message.title
                        p= message.text
                        p Log in and become a member to see message's author and date.
                    if (user && user.admin)
                        div
                            form(action="" method="POST")
                                input(type="hidden" name="messageId" required="true" value=message._id)
                                button(type="submit") Delete
