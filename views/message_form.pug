extends layout

block content
    form(action="/create-message" method="POST")
        h2= title
        div
            label(for="messageTitle") Title:
            input(name="messageTitle" required="true" type="text" maxLength="30")
        div
            label(for="messageText") Message:
            input(name="messageText" required="true" type="text" maxLength="1000")
        button(type="submit") Submit message
    if (errors)
        p #{errors}