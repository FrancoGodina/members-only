extends layout

block content
    div(class="d-flex flex-column p-2 justify-content-center align-items-center mt-5")
        form(action="/sign-up" method="POST")
            h1=title
            p Already have an account? 
                a(href="/log-in") Log in
            div
                label(for="username" class="form-label") Username:
                input(name="username" required="true" type="text" maxLength="20" class="form-control")
                if (error)
                    p #{error}
            div
                label(for="password" class="form-label") Password:
                input(name="password" required="true" type="password" class="form-control")
            div
                label(for="confirmPassword" "form-label") Confirm Password:
                input#confirmPassword(name="confirmPassword" required="true" type="password" class="form-control")
                if (passwordConfirmationError)
                    p #{passwordConfirmationError}
            br
            button(type="submit" class="btn btn-primary") Register